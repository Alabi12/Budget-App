<div class="bg-primary p-2 d-flex align-items-center">
  <%= link_to category_expenditures_path, class: "text-decoration-none text-light display-5" do %>
  <% end %>
  <h1 class="mx-auto text-center mb-0 text-light">Add expenditure</h1>
