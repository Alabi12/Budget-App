<div class="container">
  <%= form_for [@category, @expenditure], html: {class: "form"} do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'py-2 fs-5' %>
      <%= f.text_field :name, class: "form-control", placeholder: "expenditure name" %>
    </div>
    <div class="form-group">
      <%= f.label :amount, class: 'py-2 fs-5' %>
      <%= f.text_field :amount, class: "form-control", placeholder: "expenditure amount", value: number_to_currency(@expenditure.amount) %>
    </div>
    <div class="form-group">
      <%= f.label :category_ids %>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, required: true %>
    </div>
    <div class="text-center container mb-2 fixed-bottom">
      <%= f.submit "Save", class: "btn btn-lg btn-custom container-fluid py-3" %>
      <%= link_to "Back", categories_path %>
    </div>
  <% end %>
      
</div>
