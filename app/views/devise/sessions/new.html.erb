<div class="homePage">
<div class="credentials">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", id: 'email' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "current-password", id: 'password' %>
  </div><br /> <br />
 
 <%= f.submit "Log in", class: "login" %>

<% end %>

<a href="<%= new_password_path(resource_name) %>" class="forgot-password-link">Forgot your password?</a><br />

</div>
</div>